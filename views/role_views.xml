<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="karyawan_role_tree_view" model="ir.ui.view">
        <field name="name">karyawan.role.tree</field>
        <field name="model">karyawan.role</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="karyawan_role_form_view" model="ir.ui.view">
        <field name="name">karyawan.role.form</field>
        <field name="model">karyawan.role</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="karyawan_role_action" model="ir.actions.act_window">
        <field name="name">Karyawan role</field>
        <field name="res_model">karyawan.role</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>